{
    "$schema": "http://json-schema.org/schema#",
    "id": "uri://registries/match#",
    "new": {
        "title": "Nové stretnutie",
        "xxtransCode": "schema.stadium.title",
        "table": "matches",
        "_security": {
            "_create": {
                "_static": [
                    "Security - write"
                ]
            },
            "_read": {
                "_static": [
                    "Security - read"
                ]
            },
            "_modify": {
                "_static": [
                    "Security - write"
                ]
            }
        },
        "listFields": [
            {
                "field": "baseData.homeClub.refData.name",
                "title": "Domáce družstvo"
            },
            {
                "field": "baseData.awayClub.refData.name",
                "title": "Hosťujúce družstvo"
            },
            {
                "field": "baseData.matchDate.refData.name",
                "title": "Termín"
            }
        ],
        "properties": {
            "baseData": {
                "title": "Základné informácie",
                "type": "object",
                "properties": {
                    "homeClub": {
                        "title": "Domáce družstvo",
                        "type": "object",
                        "required": true,
                        "$objectLink": {
                            "registry": "rosters",
                            "name": "baseData.prName"
                        }
                    },
                    "awayClub": {
                        "title": "Hosťujúce družstvo",
                        "type": "object",
                        "required": true,
                        "$objectLink": {
                            "registry": "rosters",
                            "name": "baseData.prName"
                        }
                    },
                    "matchDate": {
                        "title": "Termín stretnutia",
                        "type": "object",
                        "required": true,
                        "$objectLink": {
                            "registry": "schedules",
                            "name": "baseData.name"
                        }
                    },
                    "halfTimeScoreHome": {
                        "title": "Polčasové skóre domáci",
                        "type": "string",
                        "required": false
                    },
                    "halfTimeScoreAway": {
                        "title": "Polčasové skóre hostia",
                        "type": "string",
                        "required": false
                    },
                    "fullTimeScoreHome": {
                        "title": "Výsledok domáci",
                        "type": "string",
                        "required": false
                    },
                    "fullTimeScoreAway": {
                        "title": "Výsledok hostia",
                        "type": "string",
                        "required": false
                    },
                    "matchBegin": {
                        "title": "Začiatok stretnutia",
                        "type": "string",
                        "required": true
                    },
                    "attendance": {
                        "title": "Návštevnosť",
                        "type": "string",
                        "required": false
                    },
                    "stadium": {
                        "title": "Štadion",
                        "type": "object",
                        "required": true,
                        "$objectLink": {
                            "registry": "stadiums",
                            "name": "baseData.name"
                        }
                    }
                }
            },
            "delegatedPerson": {
                "title": "Delegované osoby",
                "type": "object",
                "properties": {
	                "referee": {
		                "title": "Rozhodca",
                        "type": "object",
                        "required": true,
                        "$objectLink": {
                            "registry": "people",
                            "surName": "baseData.surName",
                            "firstName": "baseData.name"
                        },
                        "$objectLinkForcedCriteria": [
                            {
                                "f": "referee.isReferee",
                                "op": "eq",
                                "v": "Áno"
                            }
                        ]
                    },
	                "aReferee1": {
		                "title": "Asistent rozhodcu",
                        "type": "object",
                        "required": false,
                        "$objectLink": {
                            "registry": "people",
                            "surName": "baseData.surName",
                            "firstName": "baseData.name"
                        },
                        "$objectLinkForcedCriteria": [
                            {
                                "f": "referee.isReferee",
                                "op": "eq",
                                "v": "Áno"
                            }
                        ]
                    },
	                "aReferee2": {
		                "title": "Asistent rozhodcu",
                        "type": "object",
                        "required": false,
                        "$objectLink": {
                            "registry": "people",
                            "surName": "baseData.surName",
                            "firstName": "baseData.name"
                        },
                        "$objectLinkForcedCriteria": [
                            {
                                "f": "referee.isReferee",
                                "op": "eq",
                                "v": "Áno"
                            }
                        ]
                    },
	                "delegate": {
		                "title": "Delegát",
                        "type": "object",
                        "required": false,
                        "$objectLink": {
                            "registry": "people",
                            "surName": "baseData.surName",
                            "firstName": "baseData.name"
                        },
                        "$objectLinkForcedCriteria": [
                            {
                                "f": "referee.isReferee",
                                "op": "eq",
                                "v": "Áno"
                            }
                        ]
                    }
                }
            },
            "additionalInfoHome":{
                "title": "Doplňujúce informácie domáci",
                "type": "object",
                "properties": {
	                "approvalHome": {
	                    "title": "Súhlas vedúceho",
	                    "xxtransCode": "schema.people.title.after",
	                    "type": "string",
	                    "required": false
	                },
	                "objectionsHome": {
	                    "title": "Námietky",
	                    "xxtransCode": "schema.people.title.after",
	                    "type": "string",
	                    "required": false
	                }
                }
            },
            "additionalInfoAway":{
                "title": "Doplňujúce informácie hostia",
                "type": "object",
                "properties": {
	                "approvalAway": {
	                    "title": "Súhlas vedúceho",
	                    "xxtransCode": "schema.people.title.after",
	                    "type": "string",
	                    "required": false
	                },
	                "objectionsAway": {
	                    "title": "Námietky",
	                    "xxtransCode": "schema.people.title.after",
	                    "type": "string",
	                    "required": false
	                }
                }
            },
            "refereeReport":{
                "title": "Správa rozhodcu",
                "type": "object",
                "properties": {
	                "note": {
	                    "title": "Popis",
	                    "xxtransCode": "schema.people.title.after",
	                    "type": "string",
	                    "required": false
	                },
	                "state": {
	                    "title": "Stav",
	                    "xxtransCode": "schema.people.title.after",
	                    "type": "string",
	                    "required": true,
	                    "enum": [
	                    	"Otvorený",
	                    	"Schválený",
	                    	"Zatvorený"
	                    ],
	                    "render": {
	                        "component": "psui-selectbox",
	                        "searchable": true
	                    }
	                }
                }
            }
        }
    },
    "view": {
        "title": "Detail stretnutia",
        "xxtransCode": "schema.match.view",
        "table": "matches",
        "listFields": {
            "$ref": "uri://registries/match#new/listFields"
        },
		"properties": {
            "$ref": "uri://registries/match#new/properties"
        }
    },
    "search": {
        "title": "stretnutie",
        "xxtransCode": "schema.match.search",
        "table": "matches",
        "listFields": {
            "$ref": "uri://registries/match#new/listFields"
        },
        "properties": {
            "$ref": "uri://registries/match#new/properties"
        }
    }
}