{
	"$schema": "http://json-schema.org/schema#",
	"id": "uri://registries/events#",
	"new": {
        "title": "Nová udalosť",
		"transCode":"schema.event.new",
        "table": "events",
        "_security": {
			"_create": {
				"_static":["Registry - write"]
			},
			"_read": {
				"_static":["Registry - read"]
			},
			"_modify": {
				"_static":["Registry - write"]
			}
		},

        "properties": {
            "baseData": {
                "title": "Základné informácie",
                "transCode": "schema.event.baseData",
				"type": "object",
				"properties": {
					"name": {
						"title": "Názov udalosti",
						"transCode": "schema.event.title",
						"type": "string",
						"required": true
					},
					"details": {
						"title": "Detaily",
						"transCode": "schema.event.details",
						"type": "string",
						"required": true,
						"large":"true"
					},
					"place": {
						"title": "Miesto udalosti",
						"transCode": "schema.event.place",
						"type": "string",
						"required": true
					},
					"time": {
						"title": "Čas udalosti",
						"transCode": "schema.event.time",
						"type": "string",
						"required": true,
						"render": {
							"component": "psui-datepicker"
						}
					},
					"end": {
						"title": "Čas ukončenia",
						"transCode": "schema.event.end",
						"type": "string",
						"required": true,
						"render": {
							"component": "psui-datepicker"
						}
					},
					"organizator": {
						"title": "Organizátor",
						"transCode": "schema.event.organizator",
						"required": false,
						"$objectLink": {
							"registry": "organizations",
							"name": "baseData.name"
						}
					},
					"sponzor": {
						"title": "Sponzor",
						"transCode": "schema.event.sponzor",
						"required": false,
						"$objectLink": {
							"registry": "organizations",
							"name": "baseData.name"
						}
					},
					"ticketCost": {
						"title": "Vstupné",
						"transCode": "schema.event.ticketCost",
						"type": "string",
						"required": true
					}
				}
            }
        }
	},
	"view": {
        "title": "Udalosť",
		"transCode":"schema.event.view",
        "table": "events",
        "_security": {
			"_create": {
				"_static":["Registry - write"]
			},
			"_read": {
				"_static":["Registry - read"]
			},
			"_modify": {
				"_static":["Registry - write"]
			}
		},
		"properties":{
			"$ref": "uri://registries/events#new/properties"
		}
	},
	"search": {
        "title": "Udalosť",
		"transCode":"schema.event.search",
		"table": "events",
		"_security": {
			"_create": {
				"_static":["Registry - write"]
			},
			"_read": {
				"_static":["Registry - read"]
			},
			"_modify": {
				"_static":["Registry - write"]
			}
		},
        "listFields": [
            {"field":"baseData.name", "title":"Meno", "xxtransCode":"schema.org.listFields.name"},
			{"field":"baseData.start", "title":"Dátum začiatka", "xxtransCode":"schema.org.listFields.name"}
        ],
        "properties": {
            "baseData": {
                "$ref": "uri://registries/events#new/properties/baseData"
            }
        }
	}
}
